<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0{% if isMainPage %}, viewport-fit=cover{% endif %}">
    <title>{{ title | default("Justin Henning - Cinematographer") }}</title>

    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://player.vimeo.com" crossorigin>
    <link rel="preconnect" href="https://i.vimeocdn.com" crossorigin>
    <link rel="dns-prefetch" href="https://vimeo.com">

    <!-- Preload fonts to prevent FOUT -->
    {% if isProjectPage %}
    <link rel="preload" href="../../fonts/Tonka-MediumCondensed.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="../../fonts/Tonka-Regular.woff2" as="font" type="font/woff2" crossorigin>
    {% elif isMainPage %}
    <link rel="preload" href="/fonts/Tonka-MediumCondensed.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/Tonka-Regular.woff2" as="font" type="font/woff2" crossorigin>
    {% else %}
    <link rel="preload" href="../fonts/Tonka-MediumCondensed.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="../fonts/Tonka-Regular.woff2" as="font" type="font/woff2" crossorigin>
    {% endif %}

    {% if isProjectPage %}
    <link rel="stylesheet" href="../../style.css?v=21">
    {% elif isMainPage %}
    <link rel="stylesheet" href="/style.css?v=21">
    {% else %}
    <link rel="stylesheet" href="../style.css?v=21">
    {% endif %}

    {% if hasPhotographyStyles %}
        {% if isMainPage %}
        <link rel="stylesheet" href="/photography-style.css">
        {% else %}
        <link rel="stylesheet" href="../photography-style.css">
        {% endif %}
    {% endif %}

    {% if hasVimeoPlayer %}
    <script src="https://player.vimeo.com/api/player.js"></script>
    {% endif %}

    <style>
        /* Font: Tonka Medium Condensed - only for site title */
        @font-face {
            font-family: 'Tonka';
            src: url('{% if isProjectPage %}../../fonts/Tonka-MediumCondensed.woff2{% elif isMainPage %}/fonts/Tonka-MediumCondensed.woff2{% else %}../fonts/Tonka-MediumCondensed.woff2{% endif %}') format('woff2'),
                 url('{% if isProjectPage %}../../fonts/Tonka-MediumCondensed.woff{% elif isMainPage %}/fonts/Tonka-MediumCondensed.woff{% else %}../fonts/Tonka-MediumCondensed.woff{% endif %}') format('woff');
            font-weight: 500;
            font-style: normal;
            font-display: swap;
        }

        /* Fix header alignment for two-line title */
        header {
            align-items: flex-start !important;
            padding-top: 24px !important;
        }

        .header-left,
        .header-right {
            padding-top: 0 !important;
        }

        /* Site title styling */
        .header-center h1 {
            display: flex !important;
            flex-direction: column !important;
            align-items: center !important;
            gap: 4px !important;
            line-height: 1 !important;
        }

        .header-center h1 .name {
            font-size: 21.5px !important;
            font-weight: 500 !important;
            letter-spacing: 0.05em !important;
        }

        .header-center h1 .title {
            font-size: 12px !important;
            font-weight: 400 !important;
            letter-spacing: 0.135em !important;
        }

        /* Mobile: Hide full text, show short text */
        .info-short {
            display: none;
        }

        @media (max-width: 768px) {
            /* Header mobile adjustments */
            .info-full {
                display: none;
            }

            .info-short {
                display: inline;
            }

            header {
                padding: 16px 16px 6px 16px !important;
                transition: transform 0.3s ease-in-out;
            }

            header.header-hidden {
                transform: translateY(-100%);
            }

            .header-center {
                flex: 1 !important;
                text-align: center !important;
                padding-left: 50px !important;
                padding-right: 50px !important;
            }

            .header-center h1 {
                text-align: center !important;
            }
        }

        {% if workPageStyles %}
        /* Work page specific styles - BLACK text for header and navigation */
        body {
            background: #fff !important;
            color: #000 !important;
        }

        /* Header background */
        .main-header {
            background: #fff !important;
        }

        /* Header - black text on white background */
        .main-header,
        .main-header *,
        .header-left,
        .header-right,
        .header-center,
        .nav-link,
        .header-title-link,
        .header-title-link *,
        .header-center h1,
        .header-center h1 .name,
        .header-center h1 .title {
            color: #000 !important;
        }

        /* Side navigation - black text */
        .side-nav,
        .side-nav-right,
        .side-nav-btn,
        .main-side-nav .side-nav-btn {
            color: #000 !important;
        }

        /* Hamburger menu - black */
        .hamburger-btn span {
            background: #000 !important;
        }

        /* Mobile menu - black text */
        .mobile-menu,
        .mobile-menu-btn,
        .mobile-menu-nav * {
            color: #000 !important;
        }
        {% endif %}

        {% if infoPageStyles %}
        /* Info page specific styles - BLACK text for header and navigation */
        body {
            background: #fff !important;
            color: #000 !important;
        }

        /* Header background */
        .main-header {
            background: #fff !important;
        }

        /* Header - black text on white background */
        .main-header,
        .main-header *,
        .header-left,
        .header-right,
        .header-center,
        .nav-link,
        .header-title-link,
        .header-title-link *,
        .header-center h1,
        .header-center h1 .name,
        .header-center h1 .title {
            color: #000 !important;
        }

        /* Side navigation - black text */
        .side-nav,
        .side-nav-right,
        .side-nav-btn {
            color: #000 !important;
        }

        /* Hamburger menu - black */
        .hamburger-btn span {
            background: #000 !important;
        }

        /* Mobile menu - black text */
        .mobile-menu,
        .mobile-menu-btn,
        .mobile-menu-nav * {
            color: #000 !important;
        }
        {% endif %}

        {% if photographyPageStyles %}
        /* Photography page specific styles - BLACK text for header and navigation */
        body {
            background: #fff !important;
            color: #000 !important;
        }

        /* Header background */
        .main-header {
            background: #fff !important;
        }

        /* Header - black text on white background */
        .main-header,
        .main-header *,
        .header-left,
        .header-right,
        .header-center,
        .nav-link,
        .header-title-link,
        .header-title-link *,
        .header-center h1,
        .header-center h1 .name,
        .header-center h1 .title {
            color: #000 !important;
        }

        /* Side navigation - black text */
        .side-nav,
        .side-nav-right,
        .side-nav-btn {
            color: #000 !important;
        }

        /* Hamburger menu - black */
        .hamburger-btn span {
            background: #000 !important;
        }

        /* Mobile menu - black text */
        .mobile-menu,
        .mobile-menu-btn,
        .mobile-menu-nav * {
            color: #000 !important;
        }
        {% endif %}

        {% if archivePageStyles %}
        /* Archive page specific styles - WHITE background */
        body {
            background: #fff !important;
            color: #000 !important;
            padding-top: 0;
            margin-top: 0;
        }

        /* Header background */
        .main-header {
            background: #fff !important;
        }

        /* Header - black text on white background */
        .main-header,
        .main-header *,
        .header-left,
        .header-right,
        .header-center,
        .nav-link,
        .header-title-link,
        .header-title-link *,
        .header-center h1,
        .header-center h1 .name,
        .header-center h1 .title {
            color: #000 !important;
        }

        /* Side navigation - black text */
        .side-nav,
        .side-nav-right,
        .side-nav-btn {
            color: #000 !important;
        }

        /* Hamburger menu - black */
        .hamburger-btn span {
            background: #000 !important;
        }

        /* Mobile menu - black text */
        .mobile-menu,
        .mobile-menu-btn,
        .mobile-menu-nav * {
            color: #000 !important;
        }

        main {
            margin-top: 0;
        }

        /* Archive container */
        .archive-container {
            max-width: 1920px;
            margin: 0 auto;
            padding: 120px 32px 80px;
        }

        .archive-page-title {
            font-weight: 400;
            letter-spacing: 2.5px;
            text-transform: uppercase;
            margin-bottom: 60px;
            text-align: center;
        }

        .archive-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 60px 24px;
        }

        .archive-video-item {
            display: flex;
            flex-direction: column;
        }

        .archive-video-title {
            font-weight: 400;
            letter-spacing: 1.5px;
            text-transform: uppercase;
            margin-bottom: 12px;
        }

        .archive-video-wrapper {
            position: relative;
            width: 100%;
            padding-bottom: 56.25%; /* 16:9 aspect ratio */
            background-color: #000;
            overflow: hidden;
        }

        .archive-video-wrapper iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
        }

        .archive-video-director {
            font-weight: 400;
            letter-spacing: 1px;
            margin-top: 12px;
            opacity: 0.7;
        }

        @media screen and (max-width: 768px) {
            .archive-container {
                padding: 100px 20px 60px;
            }

            .archive-grid {
                grid-template-columns: 1fr;
                gap: 60px;
            }
        }
        {% endif %}

        {% if projectPageStyles %}
        /* Project page specific styles */
        body {
            background: #fff;
            color: #000;
            overflow-x: hidden;
            padding-left: 60px;
            padding-right: 60px;
        }

        /* Force black text and white background for header on project pages */
        .main-header {
            background: #fff;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
        }

        .main-header,
        .main-header *,
        .header-left,
        .header-right,
        .header-center,
        .nav-link,
        .header-title-link,
        .header-title-link *,
        .header-center h1,
        .header-center h1 .name,
        .header-center h1 .title {
            color: #000 !important;
        }

        .project-page-header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            padding: 24px 0;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            background: #fff;
        }

        .header-left,
        .header-right {
            flex: 1;
            padding-top: 0;
        }

        .header-left {
            text-align: left;
            padding-left: calc(60px + 32px);
        }

        .header-right {
            text-align: right;
            padding-right: calc(60px + 32px);
        }

        .header-center {
            flex: 1;
            text-align: center;
        }

        .header-title-link {
            display: inline-block;
            text-decoration: none;
            transition: opacity 0.3s ease;
        }

        .header-title-link:hover {
            opacity: 1;
        }

        .header-center h1 {
            font-family: 'Tonka', sans-serif;
            font-size: 12px;
            font-weight: 400;
            letter-spacing: 2.5px;
        }

        .back-link {
            font-family: 'Tonka', sans-serif;
            font-size: 12px;
            font-weight: 400;
            letter-spacing: 1.5px;
            text-decoration: none;
            color: #000 !important;
            transition: opacity 0.3s ease;
        }

        .project-page-header * {
            color: #000 !important;
        }

        .back-link:hover {
            opacity: 0.6;
        }

        /* Side Navigation */
        .side-nav {
            position: fixed;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            z-index: 500;
            display: flex;
            flex-direction: column;
            gap: 32px;
            padding: 0 20px;
        }

        .side-nav-btn {
            background: none;
            border: none;
            color: #000 !important;
            letter-spacing: 1.5px;
            text-transform: uppercase;
            cursor: pointer;
            transition: opacity 0.3s ease;
            padding: 0;
            writing-mode: vertical-rl;
            transform: rotate(180deg);
            white-space: nowrap;
            position: relative;
            font-family: 'Tonka', sans-serif;
            font-size: 12px;
            font-weight: 400;
            text-decoration: none;
        }

        .side-nav-btn:hover {
            opacity: 0.6;
        }

        .side-nav * {
            color: #000 !important;
        }

        .side-nav-right * {
            color: #000 !important;
        }

        .side-nav-right {
            position: fixed;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            z-index: 500;
            display: flex;
            flex-direction: column;
            gap: 32px;
            padding: 0 20px;
        }

        .side-nav-right .side-nav-btn {
            transform: rotate(0deg);
        }

        /* Hamburger menu - black on project pages (white background) */
        .hamburger-btn span {
            background: #000 !important;
        }

        /* Hamburger stays BLACK when menu is active (X on white menu background) */
        .hamburger-btn.active span:nth-child(1),
        .hamburger-btn.active span:nth-child(3) {
            background: #000 !important;
        }

        /* Ensure middle line disappears when active */
        .hamburger-btn.active span:nth-child(2) {
            opacity: 0 !important;
        }

        /* Keep hamburger BLACK when menu is open */
        body.menu-open .hamburger-btn span:nth-child(1),
        body.menu-open .hamburger-btn span:nth-child(3) {
            background: #000 !important;
        }

        body.menu-open .hamburger-btn span:nth-child(2) {
            opacity: 0 !important;
        }

        /* Mobile menu - black text */
        .mobile-menu,
        .mobile-menu-btn,
        .mobile-menu-nav * {
            color: #000 !important;
        }

        .project-container {
            max-width: 1920px;
            margin: 0 auto;
            padding: 120px 32px 4rem;
        }

        .project-header {
            margin-bottom: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: baseline;
        }

        .project-title {
            font-family: 'Tonka', sans-serif;
            font-size: 12px;
            font-weight: 400;
            letter-spacing: 0.2em;
            text-transform: uppercase;
            margin: 0;
            padding: 0;
            line-height: 1;
        }

        .project-subtitle {
            font-family: 'Tonka', sans-serif;
            font-size: 12px;
            font-weight: 400;
            letter-spacing: 0.1em;
            color: #000;
            margin: 0;
            padding: 0;
            line-height: 1;
        }

        .video-wrapper {
            position: relative;
            width: 100%;
            padding-bottom: 41.78%; /* 2.39:1 aspect ratio */
            margin-bottom: 3rem;
            background: #000;
            margin: 0;
        }

        .video-wrapper iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        .project-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            margin-top: 1.5rem;
        }

        .project-details p {
            margin-bottom: 1.5rem;
        }

        .project-details strong {
            font-weight: 400;
        }

        /* Reviews Section */
        .project-reviews {
            max-width: 1920px;
            margin: 3rem auto 4rem;
            padding: 0;
            text-align: center;
        }

        .project-reviews h2 {
            font-family: 'Tonka', sans-serif;
            font-size: 12px;
            font-weight: 400;
            letter-spacing: 0.15em;
            text-transform: uppercase;
            margin-bottom: 1.5rem;
        }

        .review-links {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
        }

        .review-link {
            font-family: 'Tonka', sans-serif;
            font-size: 12px;
            font-weight: 400;
            line-height: 1.8;
            color: #000;
            text-decoration: none;
            transition: opacity 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .review-link:hover {
            opacity: 0.6;
        }

        .review-link::before {
            content: '•';
            flex-shrink: 0;
        }

        /* Posters Section */
        .project-posters {
            max-width: 1920px;
            margin: 0 auto 4rem;
            padding: 0;
            text-align: center;
        }

        .project-posters h2 {
            font-family: 'Tonka', sans-serif;
            font-size: 12px;
            font-weight: 400;
            letter-spacing: 0.15em;
            text-transform: uppercase;
            margin-bottom: 1.5rem;
        }

        .poster-grid {
            display: flex;
            justify-content: center;
            gap: 2rem;
        }

        .poster-item {
            max-width: 400px;
            width: 100%;
        }

        .poster-item img {
            width: 100%;
            height: auto;
            display: block;
        }

        @media (max-width: 768px) {
            .poster-item {
                max-width: 300px;
            }
        }

        /* Trailer Section */
        .project-trailer {
            max-width: 1920px;
            margin: 0 auto 4rem;
            padding: 0;
            text-align: center;
        }

        .project-trailer h2 {
            font-family: 'Tonka', sans-serif;
            font-size: 12px;
            font-weight: 400;
            letter-spacing: 0.15em;
            text-transform: uppercase;
            margin-bottom: 1.5rem;
        }

        .trailer-poster {
            max-width: 600px;
            margin: 0 auto 2rem;
        }

        .trailer-poster img {
            width: 100%;
            height: auto;
            display: block;
        }

        @media (max-width: 768px) {
            .trailer-poster {
                max-width: 100%;
            }
        }

        .project-navigation-wrapper {
            max-width: 1920px;
            margin: 0 auto;
            padding: 0 32px 2rem 32px;
        }

        .project-navigation-divider {
            border-top: 1px solid #e0e0e0;
            margin: 0 0 1rem 0;
        }

        .more-projects-label {
            font-family: 'Tonka', sans-serif;
            font-size: 12px;
            font-weight: 400;
            letter-spacing: 1.5px;
            text-transform: uppercase;
            text-align: center;
            margin-bottom: 2rem;
            color: #000;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
        }

        .more-projects-label::after {
            content: '↓';
        }

        .project-navigation {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 24px;
        }

        .nav-card {
            position: relative;
            width: 100%;
            cursor: pointer;
            display: flex;
            flex-direction: column;
            text-decoration: none;
            color: #000;
            transition: opacity 0.3s ease;
        }

        .nav-card:hover {
            opacity: 0.6;
        }

        .nav-caption {
            margin-bottom: 10px;
        }

        .nav-title {
            font-family: 'Tonka', sans-serif;
            font-size: 12px;
            font-weight: 400;
            letter-spacing: 1.5px;
            text-transform: uppercase;
        }

        .nav-subtitle {
            font-family: 'Tonka', sans-serif;
            font-size: 12px;
            font-weight: 400;
            letter-spacing: 1px;
            color: #000;
            margin-left: 3px;
        }

        .nav-thumbnail {
            position: relative;
            width: 100%;
            padding-bottom: 50%; /* 2:1 aspect ratio */
            overflow: hidden;
            background-color: #000;
        }

        .nav-thumbnail-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
        }

        .nav-thumbnail-video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .nav-card:hover .nav-thumbnail-video {
            opacity: 1;
        }

        @media (max-width: 768px) {
            body {
                padding-left: 20px;
                padding-right: 20px;
            }

            .project-container {
                padding: 100px 0 2rem;
            }

            .project-details {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }

            .side-nav,
            .side-nav-right {
                display: none;
            }

            .project-navigation {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            /* Reverse order: Next on top, Previous below */
            #nextButton {
                order: -1;
            }

            .nav-button {
                width: 100%;
                text-align: center;
            }

            /* Ensure header and hamburger stay above mobile menu */
            .main-header {
                z-index: 10000 !important;
            }

            .hamburger-btn {
                z-index: 10001 !important;
            }

            /* Ensure header children have proper stacking context */
            .header-left,
            .header-right,
            .header-center {
                position: relative;
                z-index: 1;
            }

            /* When menu is open, ensure title and hamburger are visible and black */
            body.menu-open .main-header {
                z-index: 10000 !important;
            }

            body.menu-open .hamburger-btn {
                z-index: 10001 !important;
            }

            body.menu-open header,
            body.menu-open header *,
            body.menu-open header h1,
            body.menu-open .header-title-link,
            body.menu-open .header-title-link * {
                color: #000 !important;
                opacity: 1 !important;
                visibility: visible !important;
            }
        }
        {% endif %}

        /* Gallery Carousel Styles */
        .gallery-wrapper {
            position: relative;
            width: 100%;
            margin-bottom: 3rem;
        }

        .gallery-main {
            position: relative;
            width: 100%;
            padding-bottom: 41.78%; /* 2.39:1 aspect ratio */
            background: #000;
            overflow: hidden;
        }

        .gallery-image-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

        .gallery-main-image {
            width: 100%;
            height: 100%;
            object-fit: contain;
            background: #000;
        }

        .gallery-arrow {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            color: #fff;
            border: none;
            font-size: 75px !important;
            width: auto;
            height: auto;
            cursor: pointer;
            z-index: 10;
            transition: opacity 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            line-height: 1 !important;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif !important;
            font-weight: 100 !important;
            text-shadow: 0 0 10px rgba(0, 0, 0, 0.8), 0 0 20px rgba(0, 0, 0, 0.6);
        }

        .gallery-arrow:hover {
            opacity: 0.7;
        }

        .gallery-arrow-left {
            left: 0;
        }

        .gallery-arrow-right {
            right: 0;
        }

        .gallery-thumbnails {
            display: flex;
            gap: 12px;
            margin-top: 1rem;
            overflow-x: auto;
            overflow-y: hidden;
            padding: 8px 0;
            scroll-behavior: smooth;
            -webkit-overflow-scrolling: touch;
        }

        .gallery-thumbnails::-webkit-scrollbar {
            height: 6px;
        }

        .gallery-thumbnails::-webkit-scrollbar-track {
            background: #f0f0f0;
        }

        .gallery-thumbnails::-webkit-scrollbar-thumb {
            background: #999;
            border-radius: 3px;
        }

        .gallery-thumbnails::-webkit-scrollbar-thumb:hover {
            background: #666;
        }

        .gallery-thumbnail {
            flex-shrink: 0;
            width: 120px;
            height: 60px;
            cursor: pointer;
            opacity: 0.5;
            transition: opacity 0.3s ease;
            border: 2px solid transparent;
            overflow: hidden;
        }

        .gallery-thumbnail:hover {
            opacity: 0.8;
        }

        .gallery-thumbnail.active {
            opacity: 1;
            border-color: #000;
        }

        .gallery-thumbnail img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Lightbox */
        .gallery-lightbox {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.95);
            z-index: 10000;
            display: none;
            align-items: center;
            justify-content: center;
        }

        .gallery-lightbox.active {
            display: flex;
        }

        .lightbox-image {
            max-width: 90%;
            max-height: 90%;
            object-fit: contain;
        }

        .lightbox-close {
            position: absolute;
            top: 20px;
            right: 30px;
            background: none;
            border: none;
            color: #fff;
            font-size: 50px !important;
            cursor: pointer;
            z-index: 10001;
            line-height: 1 !important;
            padding: 0;
            width: auto;
            height: auto;
            transition: opacity 0.3s ease;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif !important;
            font-weight: 200 !important;
        }

        .lightbox-close:hover {
            opacity: 0.7;
        }

        .gallery-lightbox .gallery-arrow {
            background: none;
        }

        .gallery-lightbox .gallery-arrow:hover {
            opacity: 0.7;
        }

        @media (max-width: 768px) {
            .gallery-arrow {
                font-size: 50px !important;
                padding: 15px;
            }

            .gallery-thumbnail {
                width: 80px;
                height: 40px;
            }

            .lightbox-close {
                font-size: 40px !important;
                top: 10px;
                right: 15px;
            }

            .lightbox-image {
                max-width: 95%;
                max-height: 95%;
            }
        }

        {% block pageStyles %}{% endblock %}
    </style>

    {% block head %}{% endblock %}
